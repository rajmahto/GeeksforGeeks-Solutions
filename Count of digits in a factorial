#include <iostream>
#include <cmath>
using namespace std;

class Solution {
public:
    int facDigits(int N) {
        if (N == 0 || N == 1) {
            return 1; // 0! = 1 and 1! = 1, both have 1 digit
        }

        double digits = 0;
        for (int i = 2; i <= N; i++) {
            digits += log10(i);
        }

        return floor(digits) + 1;
    }
};

int main() {
    Solution sol;
    int N = 5;
    cout << "Number of digits in " << N << "! is: " << sol.facDigits(N) << endl;

    N = 10;
    cout << "Number of digits in " << N << "! is: " << sol.facDigits(N) << endl;

    return 0;
}
