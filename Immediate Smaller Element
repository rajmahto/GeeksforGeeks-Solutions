#include <iostream>
#include <vector>

using namespace std;

void immediateSmaller(vector<int>& arr, int n) {
    for(int i = 0; i < n - 1; i++) {
        if(arr[i] > arr[i + 1]) {
            arr[i] = arr[i + 1];
        } else {
            arr[i] = -1;
        }
    }
    arr[n - 1] = -1; // The last element always becomes -1 as there is no element to its right
}

int main() {
    vector<int> arr = {4, 2, 1, 5, 3};
    int n = arr.size();
    
    immediateSmaller(arr, n);
    
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    // Output: 2 1 -1 3 -1
    
    return 0;
}
