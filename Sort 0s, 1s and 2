#include <iostream>
using namespace std;

void sort012(int a[], int n) {
    int cnt0 = 0, cnt1 = 0, cnt2 = 0;

    // Count the number of 0s, 1s, and 2s
    for (int i = 0; i < n; i++) {
        if (a[i] == 0) cnt0++;
        else if (a[i] == 1) cnt1++;
        else cnt2++;
    }

    // Update the array
    for (int i = 0; i < cnt0; i++) a[i] = 0;
    for (int i = cnt0; i < cnt0 + cnt1; i++) a[i] = 1;
    for (int i = cnt0 + cnt1; i < n; i++) a[i] = 2;
}

int main() {
    int arr[] = {0, 1, 2, 0, 1, 2, 1, 0};
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << "Original array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    sort012(arr, n);

    cout << "Sorted array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
